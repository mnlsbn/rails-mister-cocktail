<div class="container">
  <div class="row">
    <div class="card text-center">
      <h2><%= @cocktail.name %></h2>
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> : <%= dose.ingredient.name %> <%=link_to "Delete", dose_path(dose),
        method: :delete%> </p>
        <% end %>

        <% if @cocktail.photo? %>
        <%= cl_image_tag @cocktail.photo.path, width: 500, height: 350, crop: :fill, class: 'img' %>
        <% end %>
    </div>

      <div class="card text-center">
        <br>
        <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
    </div>
  </div>
</div>

<div class="product">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-xs-offset-3 col-sm-6 col-md-6 col-md-offset-3">
        <div class="card-new text-center">
          <%= simple_form_for(@cocktail) do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="product-new">
    <div class="top-new"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= image_path 'cocktail'%>')">
  </div>
</div>

